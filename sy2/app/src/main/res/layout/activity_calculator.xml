<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- 水平辅助线：划分输入区域与按钮区域的分隔线 -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.3" />

    <!-- 垂直辅助线：将界面垂直分为4列（按钮列） -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_vertical_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.75" />

    <!-- 输入框上方的“Input”文本 -->
    <TextView
        android:id="@+id/tv_input_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Input"
        android:textSize="20sp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- 输入显示框 -->
    <TextView
        android:id="@+id/tv_display"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:background="#D4D4BC"
        android:gravity="end|center_vertical"
        android:paddingEnd="10dp"
        android:text="0.0"
        android:textSize="24sp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_input_label" />

    <!-- 第一行按钮：7、8、9、+ -->
    <Button
        android:id="@+id/btn_7"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="7"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/guideline_horizontal"
        app:layout_constraintEnd_toStartOf="@id/guideline_vertical_1" />

    <Button
        android:id="@+id/btn_8"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="8"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical_1"
        app:layout_constraintTop_toBottomOf="@id/guideline_horizontal"
        app:layout_constraintEnd_toStartOf="@id/guideline_vertical_2" />

    <Button
        android:id="@+id/btn_9"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="9"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical_2"
        app:layout_constraintTop_toBottomOf="@id/guideline_horizontal"
        app:layout_constraintEnd_toStartOf="@id/guideline_vertical_3" />

    <Button
        android:id="@+id/btn_add"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="+"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical_3"
        app:layout_constraintTop_toBottomOf="@id/guideline_horizontal"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 第二行按钮：4、5、6、× -->
    <Button
        android:id="@+id/btn_4"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="4"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_7"
        app:layout_constraintEnd_toStartOf="@id/guideline_vertical_1" />

    <Button
        android:id="@+id/btn_5"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="5"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical_1"
        app:layout_constraintTop_toBottomOf="@id/btn_8"
        app:layout_constraintEnd_toStartOf="@id/guideline_vertical_2" />

    <Button
        android:id="@+id/btn_6"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="6"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical_2"
        app:layout_constraintTop_toBottomOf="@id/btn_9"
        app:layout_constraintEnd_toStartOf="@id/guideline_vertical_3" />

    <Button
        android:id="@+id/btn_multiply"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="×"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical_3"
        app:layout_constraintTop_toBottomOf="@id/btn_add"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 第三行按钮：1、2、3、+ -->
    <Button
        android:id="@+id/btn_1"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="1"
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_4"
        app:layout_constraintEnd_toStartOf="@id/guideline_vertical_1" />

    <Button
        android:id="@+id/btn_2"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="2"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical_1"
        app:layout_constraintTop_toBottomOf="@id/btn_5"
        app:layout_constraintEnd_toStartOf="@id/guideline_vertical_2" />

    <Button
        android:id="@+id/btn_3"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="3"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical_2"
        app:layout_constraintTop_toBottomOf="@id/btn_6"
        app:layout_constraintEnd_toStartOf="@id/guideline_vertical_3" />

    <Button
        android:id="@+id/btn_plus"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="+"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical_3"
        app:layout_constraintTop_toBottomOf="@id/btn_multiply"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- 第四行按钮：.、0、=、- -->
    <Button
        android:id="@+id/btn_dot"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="."
        android:layout_marginStart="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btn_1"
        app:layout_constraintEnd_toStartOf="@id/guideline_vertical_1" />

    <Button
        android:id="@+id/btn_0"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="0"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical_1"
        app:layout_constraintTop_toBottomOf="@id/btn_2"
        app:layout_constraintEnd_toStartOf="@id/guideline_vertical_2" />

    <Button
        android:id="@+id/btn_equal"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="="
        app:layout_constraintStart_toStartOf="@id/guideline_vertical_2"
        app:layout_constraintTop_toBottomOf="@id/btn_3"
        app:layout_constraintEnd_toStartOf="@id/guideline_vertical_3" />

    <Button
        android:id="@+id/btn_minus"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:text="-"
        android:layout_marginEnd="20dp"
        app:layout_constraintStart_toStartOf="@id/guideline_vertical_3"
        app:layout_constraintTop_toBottomOf="@id/btn_plus"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
